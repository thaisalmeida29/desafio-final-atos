@model desafio_final_atos.Models.Venda

@{
    ViewData["Title"] = "Cadastrar Venda";
}

<h1>Cadastrar Venda</h1>


<hr />
<div class="row g-3">

    <form class="row g-3" asp-action="Create">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <div class="col-md-3">
            <label asp-for="IdCliente" class="control-label"></label>
            <select asp-for="IdCliente" class="form-control" asp-items="ViewBag.IdCliente"></select>
        </div>
        <div class="col-12">
            <input type="submit" value="Cadastrar" class="btn btn-outline-secondary text-dark" />
        </div>
        <div class="col-12">
            <a class="btn btn-outline-secondary text-dark" asp-action="Index">Voltar para a lista</a>
        </div>
    </form>
</div>



@section Scripts {
    @{
    await Html.RenderPartialAsync("_ValidationScriptsPartial");
}
}
