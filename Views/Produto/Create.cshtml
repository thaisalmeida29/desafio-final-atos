@model desafio_final_atos.Models.Produto

@{
    ViewData["Title"] = "Cadastrar Produtos";
}

<h1>Cadastro de Produtos</h1>
<hr />
<div class="row g-3">

    <form class="row g-3" asp-action="Create">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <div class="col-md-6">
            <label asp-for="CodEAN" class="control-label"></label>
            <input asp-for="CodEAN" class="form-control" />
            <span asp-validation-for="CodEAN" class="text-danger"></span>
        </div>
        <div class="col-md-6">
            <label asp-for="Nome" class="control-label"></label>
            <input asp-for="Nome" class="form-control" />
            <span asp-validation-for="Nome" class="text-danger"></span>
        </div>
        <div class="col-md-6">
            <label asp-for="Preco" class="control-label"></label>
            <input id="precomask" asp-for="Preco" class="form-control" />
            <span asp-validation-for="Preco" class="text-danger"></span>
        </div>
        <div class="col-md-6">
            <label asp-for="Estoque" class="control-label"></label>
            <input asp-for="Estoque" class="form-control" />
            <span asp-validation-for="Estoque" class="text-danger"></span>
        </div>
        <div class="col-md-3">
            <input type="submit" value="Cadastrar" class="btn btn-outline-secondary text-dark" />
        </div>
        <div class="col-12">
            <a class="btn btn-outline-secondary text-dark" asp-action="Index">Voltar para a lista</a>
        </div>
    </form>

</div>


@section Scripts {
    @{
    await Html.RenderPartialAsync("_ValidationScriptsPartial");
}
}

